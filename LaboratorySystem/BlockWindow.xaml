<Window x:Class="LaboratorySystem.BlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система блокировки" 
        Height="177.667" Width="270.333"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,-6,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="81*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Работа временно заблокирвана" 
                       FontSize="16" FontWeight="Bold"
                       HorizontalAlignment="Left" Margin="4,8,0,0" Foreground="#FFFF0B0B" Width="262"/>
        <TextBlock x:Name="tbTimer" Text="10" 
                       FontSize="44" FontWeight="Bold"
                       HorizontalAlignment="Left" Margin="100,3,0,24" Foreground="#FFFD0202" Width="64" Grid.Row="2"/>
        <TextBlock Text="Попробуйте еще раз через:" 
                       Margin="54,10,0,8"
                       HorizontalAlignment="Left" Foreground="#FFF90000" Width="165" Grid.Row="1"/>

    </Grid>
</Window>
